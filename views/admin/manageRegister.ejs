<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('head.ejs') %>
    
    <script src="/admin/js/manageRegister.js"></script>
    <!-- ssi-uploader file uploader library -->
    <link href="/lib/ssiuploader/ssi-uploader.min.css" rel="stylesheet" type="text/css" />
    <script src="/lib/ssiuploader/ssi-uploader.min.js"></script>
    
    <!-- summernote edit lib -->
    <link href="/lib/summernote/summernote-lite.min.css" rel="stylesheet" type="text/css" />
    <script src="/lib/summernote/summernote-lite.min.js"></script>

</head>
<body>
    <div class="wrap">
        <%-include('nav.ejs') %>

        <header>
            <div class="toolbar">
                <div class="toolbar__menu">
                    <a href="javascript:;">
                        <i class="fas fa-angle-double-left"></i>
                        <!-- menu -->
                        <!-- <i class="fas fa-bars"></i> -->
                    </a>
                </div>
                <div class="toolbar__logout">
                    <a href="javascript:;">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </header>
        <form action="/admin/board/boardAddProcess" method="post">
            <main>
                <div class="content">
                    <div class="register">
                        <div class="register__option">
                            <div class="register__btn">
                                <button type="button" class="btn btn-cancel">취소</button>
                                <button type="submit" class="btn btn-confirm">확인</button>
                            </div>
                        </div>
                        
                        <div class="register__action">
                            <div class="card register__act">
                                <input type="text" name="mainId" value="<%= mainId %>">
                                <input type="text" name="subId" value="<%= subId %>">

                                <div class="form__groups">
                                    <label for="registerTitle"><span class="color__important">* </span>제목</label>
                                    <input id="registerTitle" type="text" name="title">
                                </div>

                                <div class="form__groups">
                                    <p><span class="color__important">* </span>썸네일 이미지</p>
                                    <input type="file" multiple id="ssi-upload"/>
                                </div>
                                
                                <!-- 스마트 에디터 2 -->
                                <div class="form__groups">
                                    <p>내용</p>
                                    <div id="summernote"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </form>
    </div>
</body>
</html>